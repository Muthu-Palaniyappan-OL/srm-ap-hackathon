<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PayD" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="DarkGreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkgreen</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkRedText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkred</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>

    <style name="SquaredOffButton" parent="Theme.Material3.Dark">
        <item name="cornerRadius">0sp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="iconSize">30dp</item>
        <item name="iconGravity">textTop</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">12sp</item>

    </style>

    <style name="SquaredOffButtonWhite" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">0sp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconSize">25sp</item>
        <item name="iconTint">@color/black</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="HeadingText3" parent="Theme.Material3.Dark">
        <item name="fontFamily">@font/poppins_extrabold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="HeadingText1" parent="Theme.Material3.Dark">
        <item name="fontFamily">@font/poppins_extrabold</item>
        <item name="android:textSize">36sp</item>
    </style>

</resources>